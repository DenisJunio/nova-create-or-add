{
    "plugins": ["lodash"],
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:lodash/canonical",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "globals": {
        "Nova": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "vue/html-indent": ["error", 4]
    }
}
